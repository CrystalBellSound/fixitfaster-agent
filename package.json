{
  "name": "fixitfaster-agent",
  "version": "1.0.0",
  "private": true,
  "description": "Datadog Agent + demo containers for Fix It Faster hands-on",
  "scripts": {
    "up": "docker compose --env-file .env.local up -d --build",
    "down": "docker compose --env-file .env.local down",
    "logs": "docker compose --env-file .env.local logs -f agent",
    "agent:up": "docker compose --env-file .env.local up -d agent",
    "agent:down": "docker compose --env-file .env.local stop agent",
    "agent:restart": "npm run agent:down && npm run agent:up"
  }
}
